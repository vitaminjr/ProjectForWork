<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <solid android:color="#929da3" />
            <stroke android:width="1dip" android:color="#000000" />
            <padding android:left="45dp"
                android:right="45dp"
                android:top="7dp"
                android:bottom="7dp"/>
        </shape>

    </item>

    <item android:state_selected="true">

        <shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#d8716d6d" />

            <solid android:color="#ff6161" />
            <padding android:left="45dp"
                android:right="45dp"
                android:top="7dp"
                android:bottom="7dp"/>
        </shape>

    </item>

    <item android:state_focused="true">

        <shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#000" />

            <solid android:color="#c4c4c4" />
            <padding android:left="45dp"
                android:right="45dp"
                android:top="7dp"
                android:bottom="7dp"/>
        </shape>

    </item>

    <item>

        <shape android:shape="rectangle">

            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#000000" />

            <solid android:color="#afb5bd" />

            <padding android:left="45dp"
                android:right="45dp"
                android:top="7dp"
                android:bottom="7dp"/>
        </shape>

    </item>

</selector>