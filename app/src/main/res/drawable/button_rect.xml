<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <solid android:color="#c8878181" />
            <stroke android:width="1dip" android:color="#000000" />
            <padding android:left="20dp"
                android:right="20dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>

    </item>

    <item android:state_selected="true">

        <shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#d8716d6d" />

            <solid android:color="#ff6161" />
            <padding android:left="20dp"
                android:right="20dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>

    </item>

    <item android:state_focused="true">

        <shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#000" />

            <solid android:color="#c4c4c4" />
            <padding android:left="30dp"
                android:right="30dp"
                android:top="5dp"
                android:bottom="5dp"/>
        </shape>

    </item>

    <item>

        <shape android:shape="rectangle">

            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#000000" />

            <solid android:color="#c89b9494" />

            <padding android:left="25dp"
                android:right="25dp"
                android:top="5dp"
                android:bottom="5dp"/>

        </shape>

    </item>

</selector>