<selector xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_selected="true">

        <shape android:shape="rectangle">

            <stroke android:width="1dip" android:color="#d8716d6d" />

            <solid android:color="#ff6161" />
        </shape>

    </item>

    <item android:state_focused="true">

        <shape android:shape="rectangle">

            <stroke android:width="1dip" android:color="#232323" />

            <solid android:color="#bde9e3e3" />
        </shape>

    </item>


    <item >

        <shape android:shape="rectangle">

            <stroke android:width="1dip" android:color="#000" />

            <solid android:color="#def5f4f4" />
        </shape>

    </item>

</selector>