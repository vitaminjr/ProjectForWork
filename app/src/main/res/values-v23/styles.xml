<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeLight" parent="AppTheme.Light" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/bright_foreground_disabled_material_dark</item>
        <item name="colorAccent">@color/material_blue_500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/editStyle</item>
        <item name="android:textSize">18dp</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorSecondary">@color/background</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="editStyle" parent="@android:style/Widget.EditText">

        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/rect</item>
    </style>

    <style name="editStyle2" parent="@android:style/Widget.EditText">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/rect</item>
        <item name="android:textColor">@color/text_color</item>

    </style>

    <style name="editStyleWithoutMargin" parent="@android:style/Widget.EditText">
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/rect</item>

    </style>


    <style name="EditTextStyle"  parent="@android:style/Widget.Holo.EditText">

        <item name="android:background">@drawable/horizontal_line</item>
        <item name="android:textAppearance">?attr/textColorAlertDialogListItem</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/black</item>

    </style>

    <style name="countStyle" parent="@android:style/Widget.EditText">

        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/rect_without_radius</item>

    </style>

    <style name="buttonBottom" >

        <item name="android:drawable">@drawable/button_rect</item>
        <item name="android:theme">@drawable/button_rect</item>

    </style>

    <style name="buttonBottomStyle" parent="Widget.AppCompat.Button">

        <item name="android:state_pressed">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@drawable/button_rect</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>>

    </style>

    <style name="ButtonIncDecLeft" parent="Widget.AppCompat.Button">

        <item name="android:state_pressed">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">27dp</item>
        <item name="android:background">@drawable/button_left</item>
        <item name="android:gravity">center</item>

    </style>



    <style name="ButtonIncDecRight" parent="Widget.AppCompat.Button">

        <item name="android:state_pressed">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">27dp</item>
        <item name="android:background">@drawable/button_right</item>
    </style>

    <style name="myButton" parent="Widget.AppCompat.Button">

        <item name="android:state_pressed">true</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@drawable/button_right</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>>
        <item name="android:textSize">18dp</item>>

    </style>

    <style name="styleSearchView" parent="Base.Widget.AppCompat.SearchView">


    </style>


    <style name="menu_styles_label">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#EEEEEE</item>
    </style>

    <style name="button_styles_main_activity">
        <item name="android:background">@drawable/deisgn_button_main_activity</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="button_styles_export">
        <item name="android:background">@drawable/deisgn_export_image_view</item>
    </style>

    <style name="style_header_text_view">
        <item name="android:background">@drawable/style_header_main_activity</item>
        <item name="android:textColor">#1d488c</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>