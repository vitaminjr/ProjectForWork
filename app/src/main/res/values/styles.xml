<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/material_deep_teal_500</item>
        <item name="android:textColorPrimary">@color/abc_secondary_text_material_light</item>
        <item name="android:colorForeground">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_light</item>
        <item name="android:windowBackground">@color/button_material_light</item>
        <item name="android:textColorSecondaryInverse">@color/background_floating_material_dark</item>
        <item name="android:textSize">18dp</item>
        <item name="android:actionModeStyle">@style/Widget.AppCompat.ActionMode</item>
        <item name="windowActionModeOverlay">true</item>

    </style>

    <style name="ThemeLight" parent="AppTheme.Light" >
        <item name="android:actionModeBackground">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/editStyle</item>
        <item name="android:colorBackground">@color/bright_foreground_disabled_material_dark</item>
        <item name="colorAccent">@color/material_blue_500</item>
        <item name="android:actionModeStyle">@style/Widget.AppCompat.ActionMode</item>

        <item name="android:textColorSecondary">@color/background</item>

    </style>



    <style name="myButton" parent="Widget.AppCompat.Button">

        <item name="android:state_pressed">true</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@drawable/button_right</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>>
        <item name="android:textSize">18dp</item>>


    </style>

    <style name="ButtonIncDec" parent="Widget.AppCompat.Button">

        <item name="android:state_pressed">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/button_right</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>>

    </style>

    <style name="buttonBottomStyle" parent="Widget.AppCompat.Button">

        <item name="android:state_pressed">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@drawable/button_rect</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>>

    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="EditTextStyle"  parent="@android:style/Widget.Holo.EditText">

        <item name="android:background">@drawable/horizontal_line</item>
        <item name="android:textAppearance">?attr/textColorAlertDialogListItem</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/black</item>

    </style>



    <style name="editStyle" parent="@android:style/Widget.EditText">

        <item name="android:textColor">#000</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/rect</item>
    </style>

    <style name="editStyle2" parent="@android:style/Widget.EditText">

        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/rect</item>

    </style>

    <style name="countStyle" parent="@android:style/Widget.EditText">

        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/rect</item>

    </style>

    <style name="buttonBottom" >

        <item name="android:drawable">@drawable/button_rect</item>
        <item name="android:theme">@drawable/button_rect</item>

    </style>

</resources>
